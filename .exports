#!/usr/bin/env bash

# Make nano the default editor.
export EDITOR='nano';

# Enable persistent REPL history for `node`.
export NODE_REPL_HISTORY=~/.node_history;
# Allow 32³ entries; the default is 1000.
export NODE_REPL_HISTORY_SIZE='32768';
# Use sloppy mode by default, matching web browsers.
export NODE_REPL_MODE='sloppy';

# Make Python use UTF-8 encoding for output to stdin, stdout, and stderr.
export PYTHONIOENCODING='UTF-8';

# Increase Bash history size. Allow infinite entries; the default is 500.
export HISTSIZE=""
# Add timestamps to `history`
export HISTTIMEFORMAT='%F %T '
# Omit duplicates and commands that begin with a space from history.
export HISTCONTROL='ignoreboth';

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';

# Highlight section titles in manual pages.
export LESS_TERMCAP_md="${yellow}";

# Don’t clear the screen after quitting a manual page.
export MANPAGER='less -X';

# Set JAVA_HOME correctly
export JAVA_HOME=`/usr/libexec/java_home -v 1.7`

# PyEnv extra settings
export PYENV_ROOT=/usr/local/var/pyenv

# Necessary to fix issue with jruby via rvm
# Uncomment if necessary
#export SSL_CERT_FILE='/usr/local/etc/openssl/cert.pem'

# Reset the LD library path
#LD_LIBRARY_PATH=""
# necessary for ODBC
#LD_LIBRARY_PATH=/usr/local/opt/unixodbc/lib/libodbcinst.dylib
# Necessary for imageMagick
LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/lib

# For Vertica
export VERTICAINI=/usr/local/etc/vertica.ini
