#!/usr/bin/env bash

# Add additional SSH Identities
ssh-add ~/.ssh/id_aol_rsa > /dev/null
ssh-add ~/.ssh/id_github_rsa > /dev/null
ssh-add ~/.ssh/id_stash_rsa > /dev/null
ssh-add ~/.ssh/variable_aws_key.pem > /dev/null
ssh-add ~/.ssh/id_gitlab_rsa > /dev/null

# Additional settings for pyenv
if which pyenv > /dev/null; then eval "$(pyenv init -)"; fi
if which pyenv-virtualenv-init > /dev/null; then eval "$(pyenv virtualenv-init -)"; fi


# HTTP-CACHE
# Uncomment to enable http-cache
#CVO_USER=jscott@convertro.com
#CVO_PASS=JMSblink182
#alias cacheit="http-cache -u jscott@convertro.com -p JMSblink182 --client intuit --static-path ~/repos/main-dash/mysite/static/"

# Exports
# Set JAVA_HOME correctly
export JAVA_HOME=`/usr/libexec/java_home -v 1.7`

# PyEnv extra settings
export PYENV_ROOT=/usr/local/var/pyenv

# Necessary to fix issue with jruby via rvm
# Uncomment if necessary
#export SSL_CERT_FILE='/usr/local/etc/openssl/cert.pem'

# Reset the LD library path
#LD_LIBRARY_PATH=""
# necessary for ODBC
#LD_LIBRARY_PATH=/usr/local/opt/unixodbc/lib/libodbcinst.dylib
# Necessary for imageMagick
LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/lib

# For Vertica
export VERTICAINI=/usr/local/etc/vertica.ini


# For Docker & AWS Profiles
export AWS_PROFILE=federate

# brew install bash-completion@2
# enable homebrew v1 completions
export BASH_COMPLETION_COMPAT_DIR="/usr/local/etc/bash_completion.d"
# enabled bash completion
[[ -r "/usr/local/etc/profile.d/bash_completion.sh" ]] && . "/usr/local/etc/profile.d/bash_completion.sh"
